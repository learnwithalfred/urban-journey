<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"> <%= @group.name %> Entities</h1>
    <%= link_to 'New entity', new_group_entity_path(@group), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="entities" class="min-w-full">
    <% @entities.each do |entity| %>
     <div id="<%= dom_id entity %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= entity.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= entity.amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= entity.user.name %>
  </p>

</div>
<hr/>
    <% end %>
  </div>
</div>
