<div class="w-full p-4">
  <span
    class="flex flex-col items-center bg-white border rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
      src="<%= @group.icon %>" alt="<%= @group.name %>">
    <div class="flex flex-col justify-between p-4 leading-normal">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= @group.name %></h5>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Category Entities</p>
    </div>
  </span>
  <div class="flow-root ">
    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @entities.each do |entity| %>
      <li class="py-3 sm:py-4">
        <div class="flex items-center space-x-4">
          <div class="flex-1 min-w-0">
            <p class="text-base font-bold text-gray-900 truncate dark:text-white">
              <%= entity.name %>
            </p>
            <p class="text-sm text-gray-500 truncate dark:text-gray-400">
              <%= entity.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>
          <div class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-white">
            $<%= entity.amount %>
          </div>
        </div>
      </li>
      <% end %>
      <div class="mt-8 py-4 flex items-center justify-between mb-4">
        <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white">Total Transactions</h5>
        <span class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-500">
          $<%= @group.total_transaction %>
        </span>
      </div>
    </ul>
  </div>

      <%= link_to 'Add New Transaction', new_group_entity_path(@group), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium text-center" %>

</div>
