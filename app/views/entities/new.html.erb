<div class="w-full flex flex-col justify-center h-screen">
 
  <h1 class="font-bold text-2xl text-center text-white">Add New Entity for <span class="text-blue-500"><%=@group.name %>
    </span> Group</h1>

  <%= form_with model: @entity, url: group_entities_path, method: :post, local: true do |form| %>
  <% if @entity.errors.any? %>
  <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
    <h2><%= pluralize(@entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

    <ul>
      <% @entity.errors.each do |error| %>
      <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class:"text-white" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>

  <div class="my-5">
    <%= form.label :amount, class:"text-white" %>
    <%= form.text_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
  </div>


  <div class="inline">
    <%= form.submit "Add A New Transaction", class: "rounded-lg py-3 bg-secondaryColor text-white block font-medium text-center mt-8 w-full hover:bg-gray-100 hover:text-secondaryColor cursor-pointer" %>
  </div>
  <% end %>
 <%= link_to group_entities_path(@group), class:"text-white text-blue-700 my-5 font-bold text-4xl" do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-arrow-left"
    viewBox="0 0 16 16">
    <path fill-rule="evenodd"
      d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
  </svg> <span class="sr-only">Go back</span>
  <% end%>
</div>
