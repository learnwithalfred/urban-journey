<div id="<%= dom_id entity %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= entity.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= entity.amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= entity.user.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Group:</strong>
    <%= entity.group.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this entity", entity, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
